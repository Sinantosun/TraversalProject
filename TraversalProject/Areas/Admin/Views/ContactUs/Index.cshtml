@model List<ResultContactUsDto>
@{
    int count = 0;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Mesajlar</h1>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Subject</td>
            <td>@item.MessageDate.ToString("dd-MMMM-yyyy")</td>
            <td><a href="#" class=" btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class=" btn btn-outline-dark">Mesajı Aç</a></td>
        </tr>
    }
</table>

