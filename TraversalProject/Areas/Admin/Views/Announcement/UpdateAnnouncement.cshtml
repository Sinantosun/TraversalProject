@model UpdateAnnouncumentDto

@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

<h1>Duyuru Güncelleme Sayfası</h1>
<form method="post">
    <div class="form-group">
        <br />
        @if (TempData["Result"] != null)
        {
            <div class="alert alert-@TempData["Icon"] alert-dismissible" role="alert">
                @TempData["Result"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <br />
        }
    </div>
    <input type="hidden" class="form-control" asp-for="AnnouncementID" />
    <div class="form-group">
        @Html.Label("Duyuru Başlığı")
        <input type="text" class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        @Html.Label("Duyuru İçeriği")
        @Html.TextAreaFor(x=>x.Content , new {@class="form-control",@rows=15})
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>
    <div class="form-group">
        @Html.Label("Duyuru Tarih")
        <input type="datetime" class="form-control" asp-for="Date" value="@Model.Date.ToShortDateString()" />
    </div>
    <div class="form-group">
        <br />
        <input type="submit" class="btn btn-success" value="Güncelle" />
    </div>

</form>


