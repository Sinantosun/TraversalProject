@model CreateAnnouncementDto
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Duyuru Ekleme Sayfası</h1>
<form method="post" asp-action="AddAnnouncement" asp-controller="Announcement" asp-area="Admin">
    <div class="form-group">
        <br />
        @if (TempData["Result"] != null)
        {
            <div class="alert alert-@TempData["Icon"] alert-dismissible" role="alert">
                @TempData["Result"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <br />
        }
    </div>
    <div class="form-group">
        @Html.Label("Duyuru Başlığı")
        <input type="text" class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        @Html.Label("Duyuru İçeriği")
        @Html.TextAreaFor(x=>x.Content , new {@class="form-control",@rows=15})
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>
    <div class="form-group">
        <br />
        <input type="submit" class="btn btn-success" value="Kaydet" />
    </div>

</form>
