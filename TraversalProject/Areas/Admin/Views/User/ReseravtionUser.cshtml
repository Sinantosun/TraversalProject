@model List<ResultReservationByIdDto>
@{
    ViewData["Title"] = "ReseravtionUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int DbId = 0;
}

<h1>Kullanıcının Geçmiş Rezervasyonları</h1>
@if (!Model.Any())
{


    <div class="alert alert-dark" role="alert">Burada Henüz Hiç Veri Yok. Kullanıcımızın Yaptığı Geçmiş Bir Rezervasyon Bulunamadı.</div>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Rota</th>
            <th>Kişi Sayısı</th>
            <th>Tarih</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            DbId++;
            <tr>
                <td>@DbId</td>
                <td>@item.AppUser.Name @item.AppUser.Surname</td>
                <td>@item.Destination.City</td>
                <td>@item.PersonCount</td>
                <td>@(((DateTime)item.ReservastionDate).ToString("dd-MMMM-yyyy"))</td>
                <td><a href="#" class="btn btn-outline-info">Detay Gör</a></td>

            </tr>
        }
    </table>
}
