@model UpdateGuideDto
@{
    ViewData["Title"] = "EditGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Rehber Düzenleme Sayfası</h1>

@if (ViewBag.Result != null)
{
    <div class="alert alert-@ViewBag.Icon alert-dismissible" role="alert">
        @ViewBag.Result
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>


}
<form method="post">
    @Html.HiddenFor(x=>x.GuideID)
    <div class="form-group">
        @Html.Label("Ad Soyad")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Görsel")
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Twitter Linki")
        <input type="text" asp-for="TwitterUrl" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Liste Görseli ")
        <input type="text" asp-for="GuideListImage" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Açıklama ")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Açıklama 2")
        <input type="text" asp-for="Description2" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Instagram Linki")
        <input type="text" asp-for="InstagramUrl" class="form-control" />
    </div>
   <br />
    <div class="form-group">
        @Html.CheckBoxFor(x=>x.Status,new {@class="form-check-input"})
        <label class="form-check-label" for="defaultCheck1"> Durum : @(Model.Status == true ? "Aktif" : "Pasif") </label>
    </div>
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>






