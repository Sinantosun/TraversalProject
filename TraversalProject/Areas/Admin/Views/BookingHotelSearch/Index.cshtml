@model IEnumerable<ResultBookingHotelDto.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Booking Otel Rezervasyon Sayfası</h1>

<h3>Arama Yapıılan Şehir Paris/Fransa</h3>

<table class="table table-hover">
    <tr>
        <td>#</td>
        <td>Otel Adı</td>
        <td>Otel Puanı</td>
        <td>Otel Değerlendirmesi</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.name</td>
            <td>@item.reviewScore</td>
            @if (item.reviewScoreWord == "Very good")
            {
                <td>Çok İyi</td>
            }
            @if (item.reviewScoreWord == "Good")
            {
                <td>İyi</td>
            }
            @if (item.reviewScoreWord == "Fabulous")
            {
                <td>Harika</td>
            }
            @if (item.reviewScoreWord == "Superb")
            {
                <td>Mükemmel</td>
            }
        </tr>
    }
</table>