@model GetGuideByIDQueryResult
@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS MedaitR Rehber Bilgi Düzenleme Sayfası</h1>

<form method="post">
    <input type="hidden" class="form-control" asp-for="GuideID" />
    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Rehber Açıklaması</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <input type="submit" class="btn btn-success" value="Güncelle" />
</form>