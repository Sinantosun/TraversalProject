@model CreateGuideCommand
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS MedaitR Rehber Ekleme Sayfası</h1>

@if (ViewBag.Result != null)
{
    <div class="alert alert-info">@ViewBag.Result</div>
}

<form method="post">
    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Rehber Açıklaması</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <input type="submit" class="btn btn-success" value="Ekle" />
</form>

