@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS Tur Rota Verileri</h1>

<a href="/Admin/DestinationCQRS/AddDestination/" class="btn btn-dark">Yeni Tur Rotası Girişi</a>



<br />
<br />
<table class="table table-hover">
    <tr>
        <td>#</td>
        <td>Şehir</td>
        <td>Gün - Gece</td>
        <td>Fiyat</td>
        <td>Kapasite</td>
        <td colspan="2">İşlem</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DestinationID</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Price.ToString("0.00")</td>
            <td>@item.Capacity</td>
            <td><a href="/Admin/DestinationCQRS/DeleteDestination/@item.DestinationID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/DestinationCQRS/GetDestination/@item.DestinationID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
