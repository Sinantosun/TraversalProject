@using EntityLayer.Concrete;
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rol Listesi</h1>
<a href="/Admin/Role/CreateRole/" class="btn btn-outline-dark">Yeni Rol Ekle</a>
<a href="/Admin/Role/UserList/" class="btn btn-outline-success">Rol Atama İşlemleri</a>
<br />
<br />
@if (Model.Count > 0)
{
    <table class="table table-hover">
        <tr>
            <td>#</td>
            <td>Rol Adı</td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-info">Herhangi bir rol bulunamadı.</div>
}
