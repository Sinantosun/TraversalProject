@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RegistrationForm_v10 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/colorlib-regform-26/fonts/linearicons/style.css">
    <link rel="stylesheet" href="/colorlib-regform-26/css/style.css">
</head>
<body>
    <div class="wrapper">
        <div class="inner">
            <form method="post">
                <h3>Şifre Sıfırlama Ekranı</h3>
                <h4 style="text-align:center">Şifre Güncelleme</h4><br />
                <div class="form-holder">
                    <span class="lnr lnr-lock"></span>
                    <input type="text" class="form-control" name="pwd" placeholder="Yeni Şifreniz">
                </div>
                <div class="form-holder">
                    <span class="lnr lnr-lock"></span>
                    <input type="text" class="form-control" name="cnfrmpwd" placeholder="Yeni Şifrenizi Yeniden Giriniz">
                </div>
                <br />
                @if (ViewBag.Err != null)
                {
                    <div class="text-danger" style="text-align:center; color:red; font-weight:bold;">
                        @ViewBag.Err
                    </div>
                }
                <button>
                    <span>Şifre Sıfırla</span>
                </button>
            </form>
            <img src="/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
        </div>
    </div>
    <script src="/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>

    <script src="/colorlib-regform-26/js/main.js"></script>



</body>
</html>