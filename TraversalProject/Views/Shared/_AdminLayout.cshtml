@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_AdminLayout</title>
</head>
<body>
    <!DOCTYPE html>
    <html lang="TR"
          class="light-style layout-menu-fixed"
          dir="ltr"
          data-theme="theme-default"
          data-assets-path="~/sneat-1.0.0/assets/"
          data-template="vertical-menu-template-free">

    @await Html.PartialAsync("~/Views/Admin/_AdminPartialHeader.cshtml")
    <body>
        <div class="layout-wrapper layout-content-navbar">
            <div class="layout-container">
                <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                    @await Html.PartialAsync("~/Views/Admin/_AdminPartiaAppBrandDemo.cshtml")
                    <div class="menu-inner-shadow"></div>
                    @await Html.PartialAsync("~/Views/Admin/_AdminPartialSideBar.cshtml")
                </aside>
                <div class="layout-page">
                    @await Html.PartialAsync("~/Views/Admin/_AdminPartialNavbar.cshtml")
                    <div class="content-wrapper">
                        <div class="container-xxl flex-grow-1 container-p-y">
                            @RenderBody()
                        </div>
                        @await Html.PartialAsync("~/Views/Admin/_AdminPartialFooter.cshtml")
                        <div class="content-backdrop fade"></div>
                    </div>
                </div>
            </div>
            <div class="layout-overlay layout-menu-toggle"></div>
        </div>
        @await Html.PartialAsync("~/Views/Admin/_AdminPartialScripts.cshtml")
    </body>
</body>
</html>