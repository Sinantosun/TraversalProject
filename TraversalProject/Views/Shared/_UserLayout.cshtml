@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer  localizer
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Html.PartialAsync("~/Views/MemberLayoutPartial/_HeaderPartial.cshtml")
<body class="g-sidenav-show  bg-gray-100">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 " id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0" href="https://demos.creative-tim.com/soft-ui-dashboard/pages/dashboard.html" target="_blank">
                <span class="ms-1 font-weight-bold">Traversal Dashboard</span>
            </a>
        </div>
        <hr class="horizontal dark mt-0">
        <div class="collapse navbar-collapse  w-auto  max-height-vh-100 h-100" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link  " href="/Members/Dashboard/Index/">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-tachometer text-dark" style="font-size:10pt"></i>
                        </div>
                        <span class="nav-link-text ms-1">@localizer["Dashboard"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="/Members/Destination/Index">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-location-arrow text-dark" style="font-size:10pt"></i>
                        </div>
                        <span class="nav-link-text ms-1">@localizer["Rotalar"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="/Destination/Index" target="_blank">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-arrows text-dark" style="font-size:10pt"></i>
                        </div>
                        <span class="nav-link-text ms-1">@localizer["Son Eklenen Rotalar"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link  " href="/Members/Profile/Index/">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-user text-dark" style="font-size:10pt"></i>
                        </div>
                        <span class="nav-link-text ms-1">@localizer["Profilim"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link  " href="/Members/Reservation/MyCurrentReservation/">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-pencil-square-o text-dark" style="font-size:10pt"></i>
                        </div>
                        <span class="nav-link-text ms-1"> @localizer["Aktif Rezervasyonlarım"]</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link  " href="/Members/Reservation/MyOldReservation/">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-history text-dark" style="font-size:10pt"></i>
                        </div>
                        <span class="nav-link-text ms-1">@localizer["Geçmiş Rezervasyonlarım"]</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link  " href="/Members/Reservation/MyApprovalReservation/">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-check-circle text-dark" style="font-size:10pt"></i>
                        </div>
                        <span class="nav-link-text ms-1">@localizer["Onay Bekliyen"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link  " href="/Members/Reservation/NewReservation/">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-plus text-dark" style="font-size:10pt"></i>
                        </div>
                        <span class="nav-link-text ms-1">@localizer["Yeni Rezervasyon"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" target="_blank" href="/Default/Index">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa fa-share text-dark" style="font-size:10pt"></i>
                        </div>
                        <span class="nav-link-text ms-1">@localizer["Siteye Git"]</span>
                    </a>
                </li>
                @if (User.Identity.Name != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" target="_blank" href="/Default/Index">
                            <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="fa fa-sign-out text-dark" style="font-size:10pt"></i>
                            </div>
                            <span class="nav-link-text ms-1">@localizer["Çıkış Yap"]</span>
                        </a>
                    </li>
                }

            </ul>
        </div>
    </aside>
    <main class="main-content position-relative max-height-vh-100 h-100 mt-1 border-radius-lg ">
        @await Html.PartialAsync("~/Views/MemberLayoutPartial/_NavbarPartial.cshtml")
        <div class="container-fluid py-4">
          @RenderBody()



            @await Html.PartialAsync("~/Views/MemberLayoutPartial/_FixedPlugin.cshtml")
        </div>
    </main>
    @await Html.PartialAsync("~/Views/MemberLayoutPartial/_ScriptPartial.cshtml")
</body>

</html>