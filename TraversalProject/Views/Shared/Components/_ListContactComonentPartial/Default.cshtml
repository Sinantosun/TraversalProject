@model List<ResultContactDto>
<div class="col-lg-6 contact-left">
    <div class="partners">
        <div class="cont-details">
            <h5>İletişim Bilgileri</h5>
            <p class="mt-3 mb-4">
                Merhaba 7/24 hizmet vermekteyiz mail, telefon veya lokasyon üzerinden bize ulaşabilirsiniz.
            </p>
        </div>
        <div class="hours">
            @foreach (var item in Model)
            {
                <h6 class="mt-4">Email:</h6>
                <p>
                    <a href="mailto:@item.Mail">
                        @item.Mail
                    </a>
                </p>
                <h6 class="mt-4">Lokasyon</h6>
                <p> @item.Adress</p>
                <h6 class="mt-4">Telefon:</h6>
                <p class="margin-top"><a href="tel:+@item.Phone">@item.Phone</a></p>
                <p class="margin-top"><a href="@item.MapLocation" class="btn btn-outline-info">Haritada Göster</a></p>
            }
        </div>
    </div>
</div>


