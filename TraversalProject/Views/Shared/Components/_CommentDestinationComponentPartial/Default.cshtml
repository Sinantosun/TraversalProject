@model List<FilterCommentDto>

@if (Model.Count > 0)
{
    <div class="comments mt-5">
        <h4 class="side-title ">Yorumlar (@Model.Count())</h4>
        @foreach (var item in Model)
        {
            <div class="media mt-4">
                <div class="img-circle">
                    <img src="~/Traversal-Liberty/assets/images/userPhoto.png" class="img-fluid" alt="...">
                </div>
                <div class="media-body">

                    <ul class="time-rply mb-2">
                        <li>
                            <a href="#URL" class="name mt-0 mb-2 d-block">@item.CommentUser</a>
                            @item.CommentDate.ToShortDateString()

                        </li>
                    @*     <li class="reply-last">
                            <a href="#reply" class="reply">
                                Yanıtla
                            </a>
                        </li> *@
                    </ul>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }

    </div>
}
else
{
    <div class="comments mt-5">
        <h4 class="side-title ">Henüz Yorum Yok, Buraya İlk Yorumu Yapan Siz Olun!</h4>
    </div>
}



